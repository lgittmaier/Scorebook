<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewRound">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/show_stats_stats"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Stats"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/show_stats_gcname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="30sp"
            tools:layout_marginBottom="20dp"
            android:text="GC Name:" />

        <TextView
            android:id="@+id/show_stats_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Address:"
            android:textSize="30sp"
            tools:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/show_stats_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="30sp"
            tools:layout_marginBottom="0dp"
            android:text="Date:" />

        <TextView
            android:id="@+id/show_stats_strich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="20sp"
            tools:layout_marginBottom="20dp"
            android:text="_____________________" />





        <TextView
            android:id="@+id/show_stats_par"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="30sp"
            tools:layout_marginBottom="20dp"
            android:text="Par:" />

        <TextView
            android:id="@+id/show_stats_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="30sp"
            tools:layout_marginBottom="20dp"
            android:text="Score:" />

        <TextView
            android:id="@+id/show_stats_over"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="30sp"
            tools:layout_marginBottom="20dp"
            tools:layout_marginLeft="20dp"
            android:text="over:" />


        <TextView
            android:id="@+id/show_stats_fairways_hit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="30sp"
            tools:layout_marginBottom="20dp"
            android:text="Fairways hit:" />


        <TextView
            android:id="@+id/show_stats_putts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="30sp"
            tools:layout_marginBottom="20dp"
            android:text="Putts:" />



        <TextView
            android:id="@+id/show_stats_greens_i_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="30sp"
            tools:layout_marginBottom="20dp"
            android:text="Greens i.r.:" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>